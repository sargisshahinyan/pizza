<% include header.ejs %>
<section class=" col-xs-11 col-sm-10">
    <article class="col-md-offset-1 col-md-10 ">
        <div class="row">
            <h3 class="col-md-offset-1 col-md-4">New Product</h3>
        </div>
        <div class="row">
            <form class="col-md-offset-1 col-md-10" id="myForm" action="javascript:void(0)">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" class="form-control" name="title" placeholder="Title" required>
                </div>
                <label><b>Photo</b></label><br>
                <label for="photo">
                    <img class='photo avatar' src="/img/upload.PNG" alt="Photo"/>
                </label>
                <input id='photo' style="display: none" type="file" required />
                <div class="form-group">
                    <label for="category">Category</label>
                    <select id="category" class="form-control" name="category" required>
                        <option value="" selected disabled>Select category</option>
                        <% categories.forEach((category) => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                        <% }); %>
                    </select>
                </div>
                <div id="adds" class="form-group"></div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="text" id="price" class="form-control" placeholder="Price" required>
                </div>
                <div class="form-group">
                    <label for="price">Description</label>
                    <textarea id="description" class="form-control" placeholder="Description" required></textarea>
                </div>
                <button type="button" id="add" class="btn btn-primary">Add</button>
                <button type="button" id="cancel" style="display: none" class="btn btn-default">Cancel</button>
                &nbsp;
                <button type="button" id="save" style="display: none" class="btn btn-primary">Save</button>
            </form>
        </div>
        <div class="row">
            <div class="list-group" id="products-list">
                <% products.forEach((product) => { %>
                <span id="id-<%= product.id %>" data-id="<%= product.id %>" class="list-group-item row">
                    <span class="col-xs-8 list-item-title">
                        <%= product.name %>
                    </span>
                    <span class="col-xs-4 text-right main-menu">
                        <button class="edit btn btn-success"><span class="edit glyphicon glyphicon-pencil"></span></button>
                        <button class="delete btn btn-danger"><span class="delete glyphicon glyphicon-remove"></span></button>
                    </span>
                </span>
                <% }); %>
            </div>
        </div>
    </article>
</section>
<script src="/js/libs/photos.js"></script>
<script src="/js/admin/products.js"></script>
<% include footer.ejs %>